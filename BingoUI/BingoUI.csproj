<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <ProjectGuid>{A7892D33-1177-4140-AAF1-FDAE4AD7A2AF}</ProjectGuid>
    <TargetFramework>net472</TargetFramework>
    <RootNamespace>BingoUI</RootNamespace>
    <AssemblyTitle>BingoUI</AssemblyTitle>
